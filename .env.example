# Agent Swarm Evaluation Arena - Environment Configuration
# Copy this file to .env and customize for your environment

# ================================
# Core Application Settings
# ================================

# Environment (development, testing, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Application version (auto-detected if not set)
APP_VERSION=

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ================================
# Arena Configuration
# ================================

# Default number of agents for new arenas
DEFAULT_NUM_AGENTS=100

# Default arena size (width,height in units)
DEFAULT_ARENA_SIZE=1000,1000

# Default episode length (steps)
DEFAULT_EPISODE_LENGTH=1000

# Maximum allowed agents per arena
MAX_AGENTS_PER_ARENA=10000

# Arena step timeout (seconds)
ARENA_STEP_TIMEOUT=30

# ================================
# Distributed Computing (Ray)
# ================================

# Ray cluster configuration
RAY_HEAD_NODE_HOST=localhost
RAY_HEAD_NODE_PORT=10001
RAY_DASHBOARD_PORT=8265

# Disable Ray usage statistics collection
RAY_DISABLE_USAGE_STATS=1

# Ray logging configuration
RAY_DEDUP_LOGS=0
RAY_LOG_TO_STDERR=1

# Resource limits per worker
RAY_WORKER_CPU_LIMIT=4
RAY_WORKER_GPU_LIMIT=0.25
RAY_WORKER_MEMORY_LIMIT=8GB

# ================================
# Database Configuration
# ================================

# PostgreSQL connection
DATABASE_URL=postgresql://swarm_user:swarm_password@localhost:5432/swarm_arena
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis connection (for caching and pub/sub)
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# ================================
# Web Server Configuration
# ================================

# API server settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# API rate limiting
API_RATE_LIMIT_PER_MINUTE=100

# ================================
# Monitoring & Telemetry
# ================================

# Monitoring dashboard
MONITORING_PORT=8080
MONITORING_UPDATE_FREQUENCY=30

# Telemetry collection
ENABLE_TELEMETRY=true
TELEMETRY_BATCH_SIZE=1000
TELEMETRY_FLUSH_INTERVAL=5

# Metrics collection
COLLECT_SYSTEM_METRICS=true
COLLECT_PERFORMANCE_METRICS=true
COLLECT_FAIRNESS_METRICS=true

# ================================
# Security Configuration
# ================================

# JWT authentication
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API key for external integrations
API_KEY=your-api-key-change-this

# Enable input validation (true/false)
ENABLE_INPUT_VALIDATION=true

# Maximum file upload size (in bytes)
MAX_UPLOAD_SIZE=104857600

# ================================
# Development Settings
# ================================

# Enable debug toolbar
ENABLE_DEBUG_TOOLBAR=true

# Enable API documentation
ENABLE_API_DOCS=true

# Jupyter Lab settings
JUPYTER_ENABLE_LAB=yes
JUPYTER_PORT=8888
JUPYTER_TOKEN=

# ================================
# Testing Configuration
# ================================

# Test database URL
TEST_DATABASE_URL=postgresql://swarm_user:swarm_password@localhost:5432/swarm_arena_test

# Test Redis URL
TEST_REDIS_URL=redis://localhost:6379/1

# Enable test coverage reporting
COVERAGE_REPORT=true

# Test parallelization
TEST_WORKERS=auto

# ================================
# Performance Settings
# ================================

# Memory limits
MAX_MEMORY_PER_AGENT=10MB
MAX_TOTAL_MEMORY=8GB

# CPU limits
MAX_CPU_PER_AGENT=0.1
MAX_CPU_CORES=8

# Network settings
MAX_NETWORK_CONNECTIONS=1000
NETWORK_TIMEOUT=30

# ================================
# File Storage
# ================================

# Local file storage paths
DATA_DIR=./data
LOGS_DIR=./logs
TEMP_DIR=./temp
CACHE_DIR=./cache

# S3-compatible storage (optional)
S3_ENDPOINT_URL=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=swarm-arena-data
S3_REGION=us-east-1

# ================================
# Visualization Settings
# ================================

# 3D visualization renderer
VISUALIZATION_BACKEND=plotly
VISUALIZATION_DPI=100
VISUALIZATION_FPS=30

# Dashboard refresh rate
DASHBOARD_REFRESH_RATE=1000

# ================================
# Integration Settings
# ================================

# Weights & Biases integration
WANDB_PROJECT=swarm-arena
WANDB_ENTITY=
WANDB_API_KEY=

# MLflow tracking
MLFLOW_TRACKING_URI=
MLFLOW_EXPERIMENT_NAME=swarm-arena-experiments

# Slack notifications (optional)
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#swarm-arena

# ================================
# Advanced Configuration
# ================================

# Custom environment configurations
CUSTOM_CONFIG_PATH=./configs/custom.yaml

# Plugin directories
PLUGIN_DIRS=./plugins

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Garbage collection settings
GC_THRESHOLD_0=700
GC_THRESHOLD_1=10
GC_THRESHOLD_2=10

# ================================
# Cloud Provider Settings
# ================================

# AWS Configuration (if using AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Google Cloud Configuration (if using GCP services)
GOOGLE_CLOUD_PROJECT=
GOOGLE_APPLICATION_CREDENTIALS=

# Azure Configuration (if using Azure services)
AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP=

# ================================
# Development Tools
# ================================

# Pre-commit hooks
SKIP_PRE_COMMIT=false

# Auto-formatting
AUTO_FORMAT_ON_SAVE=true

# Type checking
ENABLE_TYPE_CHECKING=true

# Profiling
ENABLE_PROFILING=false
PROFILER_OUTPUT_DIR=./profiles

# ================================
# Deployment Settings
# ================================

# Container settings
CONTAINER_REGISTRY=
CONTAINER_TAG=latest

# Kubernetes settings
KUBERNETES_NAMESPACE=swarm-arena
KUBERNETES_CONTEXT=

# Health check endpoints
HEALTH_CHECK_PATH=/health
READY_CHECK_PATH=/ready

# ================================
# Backup and Recovery
# ================================

# Backup configuration
ENABLE_AUTOMATED_BACKUPS=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups